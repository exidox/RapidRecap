{ 
    "manifest_version": 3,
    "name": "RapidRecap Final",
    "description": "An extension to summarize a webpage or generate mcq questions for quick study sessions.",
    "version": "1.0",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "host_permissions": ["http://127.0.0.1:5000/*"],
    
    "action": {
        "default_title": "RapidRecap",
        
        "default_popup": "popup.html"
    }    
}